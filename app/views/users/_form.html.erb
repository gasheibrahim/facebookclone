<%= form_with(model: @user, local: true) do |form| %>
      <div class="container">
      <div class=row>
      <div class="col-md-6" style="margin-left:600px;;">
        <h1 style="font-size:30px;">Create a New Account</h1>
        <p>Itâ€™s quick and easy.</p>
        <div class="form-row">
          <div class="form-group col-md-6">
            <%= form.text_field :first_name, class:"form-control", id:"inputEmail4", placeholder:"First Name" %>
          </div>
          <div class="form-group col-md-6">
            <%= form.text_field :last_name, class:"form-control", id:"inputEmail4", placeholder:"Last Name" %>
          </div>
        </div>
        <div class="form-group">
          <%= form.text_field :phone_number,class:"form-control", id:"inputAddress", placeholder:"Phone Number" %>
        </div>
        <div class="form-group">
          <%= form.text_field :email, class:"form-control", id:"inputAddress2", placeholder:"Email" %>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <%= form.text_field :password, class:"form-control", id:"inputCity", placeholder:"New Password" %>
          </div>
        <div class="form-group col-md-6">
          <%= form.text_field :password_comfirm, class:"form-control", id:"inputCity", placeholder:"Password Confirmation" %>
        </div>
        </div>
        <div class="form-group">
          <%= form.label :dob %><br>
          <%= form.date_select :dob, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= form.text_field :sex, class:"form-control", placeholder:"Gender" %>
        </div>
        <%= form.submit class:"btn btn-primary" %>
        <%= link_to 'Back', users_path, class:"btn" %>
      </div>
      </div>
      </div>
    <% end %>